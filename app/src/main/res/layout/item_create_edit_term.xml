<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/term_background"
        android:padding="10dp">

        <ImageButton
            android:id="@+id/delete_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/balloon_overlay_close"
            android:background="@color/term_background"/>

        <TextView
            android:id="@+id/tv_term_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text=""
            android:textSize="20sp"
            android:textColor="@color/text_color"/>

        <EditText
            android:id="@+id/et_term"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:ems="10"
            android:hint="Enter term"
            android:textColorHint="@color/text_hint_color"
            android:inputType="textMultiLine"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_term_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_term"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:text="TERM"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/et_definition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_term_create"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="11dp"
            android:ems="10"
            android:hint="Enter definition"
            android:textColorHint="@color/text_hint_color"
            android:inputType="textMultiLine"
            android:textColor="@color/text_color" />

        <TextView
            android:id="@+id/tv_definition_create"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_definition"
            android:layout_marginStart="20dp"
            android:layout_marginTop="0dp"
            android:text="DEFINITION"
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_space"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_definition_create"
            android:layout_marginStart="15dp"
            android:layout_marginTop="11dp"
            android:text="" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>